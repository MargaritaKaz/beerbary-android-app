<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/beerItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:clickable="true"
    android:orientation="horizontal">

    <!--This holds photo of beer-->


    <ImageView
        android:id="@+id/beerListPhoto"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:srcCompat="@drawable/sample_beer_img" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">


        <TextView
            android:id="@+id/beerListName"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/nunito_sans"
            android:maxLines="2"
            android:text="LECH Premium Piwo jasne peÅ‚ne"
            android:textColor="@color/black"
            android:textSize="27sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemFlavour"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/nunito_sans"
                android:maxLines="2"
                android:text="TextView" />

            <TextView
                android:id="@+id/avg_rating"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="4,0"
                android:textAlignment="textEnd"
                android:textColor="@color/orange"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/full"
                android:layout_marginBottom="3dp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>